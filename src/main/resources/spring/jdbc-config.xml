    <!-- Un-comment  to use non-persistent in-memory database -->
    <jdbc:embedded-database id="tcopDataSource">
        <jdbc:script location="${studerw.sscdb.jdbc.db.createSql}" />
        <jdbc:script location="${tcop.jdbc.db.dataSql}" />
    </jdbc:embedded-database>

    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager"
        p:dataSource-ref="tcopDataSource" />

